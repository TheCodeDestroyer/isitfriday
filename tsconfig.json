{
  "extends": ["@tcd-devkit/tsconfig/next"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@shared/*": ["src/lib/shared/*"],
      "@server/*": ["src/lib/server/*"],
      "@client/*": ["src/lib/client/*"],
      "@public/*": ["public/*"],
      "@global-style": ["src/app/globals.css"],
      "@server/convex/*": ["convex/*"]
    },
    "noEmit": true,
    "incremental": true,
    // Remove once TS fixes that this checks node_modules
    "erasableSyntaxOnly": false
  },
  "include": ["**/*", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
